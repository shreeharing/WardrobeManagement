<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= user.username %>'s Profile</title>
  <style>
    body {
      background-color: #111;
      color: #eee;
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 2rem;
    }

    h1, h2 {
      color: #ff3b3f;
      text-align: center;
    }

    ul {
      list-style: none;
      padding-left: 0;
      max-width: 600px;
      margin: 1rem auto 2rem;
    }

    ul li {
      padding: 0.5rem;
      background-color: #1c1c1c;
      border-left: 5px solid #ff3b3f;
      margin-bottom: 0.5rem;
      border-radius: 4px;
    }

    .feed-container {
      max-width: 700px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .post-card {
      background: #1a1a1a;
      border: 1px solid #ff3b3f;
      border-radius: 8px;
      overflow: hidden;
      padding: 1rem;
      box-shadow: 0 0 12px rgba(255, 59, 63, 0.3);
    }

    .post-card img {
      width: 100%;
      max-height: 300px;
      object-fit: cover;
      border-radius: 5px;
    }

    .caption {
      margin: 0.8rem 0;
      font-size: 1rem;
    }

    .post-actions button {
      background: #ff3b3f;
      border: none;
      color: white;
      padding: 0.4rem 0.8rem;
      margin-right: 0.5rem;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.9rem;
    }

    .post-actions button:hover {
      background: #e02e32;
    }

    .comment-box {
      background: #222;
      padding: 0.5rem;
      border-radius: 4px;
    }

    .comment-item {
      border-bottom: 1px solid #333;
      padding: 0.3rem 0;
    }

    .comment-item:last-child {
      border-bottom: none;
    }
     .modal.hidden {
    display: none;
  }
  .modal {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(0,0,0,0.7);
    z-index: 9999;
  }
  .modal-content {
    background: #1c1c1c;
    padding: 2rem;
    border-radius: 8px;
    width: 90%;
    max-width: 500px;
    color: white;
    position: relative;
  }
  .close-btn {
    position: absolute;
    top: 10px; right: 10px;
    cursor: pointer;
    font-size: 1.2rem;
  }
  .modal-content textarea {
    width: 100%;
    padding: 0.7rem;
    border-radius: 4px;
    background: #333;
    color: white;
    border: 1px solid #555;
  }
  header {
  background-color: #1a1a1a;
  padding: 1rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2px solid #ff3b3f;
}

header h1 {
  color: #ff3b3f;
  margin: 0;
}

header nav a {
  color: #eee;
  text-decoration: none;
  padding: 0.4rem 1rem;
  border-radius: 20px;
  transition: background 0.3s;
}

header nav a:hover {
  background: #ff3b3f;
}

  </style>
</head>
<body>
  <header style="background-color: #1a1a1a; padding: 1rem 2rem; display: flex; justify-content: space-between; align-items: center; border-bottom: 2px solid #ff3b3f;">
  <h1 style="color: #ff3b3f; margin: 0;">My Profile</h1>
  <nav style="display: flex; gap: 1rem;">
    <a href="/auth/dashboard" style="color: #eee; text-decoration: none; padding: 0.4rem 1rem; border-radius: 20px; transition: background 0.3s;" onmouseover="this.style.background='#ff3b3f'" onmouseout="this.style.background='transparent'">Dashboard</a>
    <a href="/auth/users" style="color: #eee; text-decoration: none; padding: 0.4rem 1rem; border-radius: 20px; transition: background 0.3s;" onmouseover="this.style.background='#ff3b3f'" onmouseout="this.style.background='transparent'">Explore</a>
  </nav>
</header>

  <h1>Hello, <%= user.username %>!</h1>

  <h2>Your Wardrobe</h2>
  <ul>
    <% inventory.forEach(item => { %>
      <li><%= item.name %> - <%= item.category %></li>
    <% }) %>
  </ul>

  <h2>Your Posts</h2>
  <div class="feed-container">
    <% if (posts.length === 0) { %>
      <p style="text-align: center;">No posts yet.</p>
    <% } else { %>
      <% posts.forEach(post => { %>
        <div class="post-card">
          <% if (post.items[0] && post.items[0].imageUrl) { %>
            <img src="<%= post.items[0].imageUrl %>" alt="Post Image" />
          <% } %>

          <p><strong>Item:</strong> <%= post.items[0]?.name || 'Unnamed' %> (<%= post.items[0]?.category || 'Unknown' %>)</p>
          <p class="caption"><strong>Caption:</strong> <%= post.caption %></p>
          <p>‚ù§Ô∏è <%= post.likes.length %> like(s)</p>
          <p>üí¨ <%= post.comments.length %> comment(s)</p>

          <!-- <% if (post.comments.length > 0) { %>
            <div class="comment-box">
              <% post.comments.forEach(c => { %>
                <div class="comment-item">
                  <strong><%= c.user.username %></strong>: <%= c.text %>
                </div>
              <% }) %>
            </div>
          <% } %> -->

          <div class="post-actions">
  <form action="/auth/delete-post/<%= post._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this post?');">
    <button type="submit">üóëÔ∏è Delete</button>
  </form>

  <form action="/auth/edit-post/<%= post._id %>" method="POST" style="display:inline;">
<button onclick="event.preventDefault(); editPost('<%= post._id %>', `<%- JSON.stringify(post.caption).slice(1, -1) %>`)">‚úèÔ∏è Edit</button>


  </form>
</div>

        </div>
      <% }) %>
    <% } %>
  </div>
<div id="editPostModal" class="modal hidden">
  <div class="modal-overlay" onclick="closeEditModal()"></div>
  <div class="modal-content">
    <span class="close-btn" onclick="closeEditModal()">‚ùå</span>
    <h2>Edit Post</h2>

    <form id="editPostForm" method="POST">
      <textarea id="editCaptionInput" name="caption" rows="4" required></textarea>
      <br><br>
      <button type="submit" style="background: #ff3b3f; color: white; border: none; padding: 0.5rem 1rem; border-radius: 5px;">üíæ Save</button>
    </form>
  </div>
</div>
  <script>
  let currentEditPostId = null;
function editPost(postId, caption) {
  currentEditPostId = postId;
  document.getElementById('editCaptionInput').value = caption;
  document.getElementById('editPostForm').action = `/auth/edit-post/${postId}`;
  document.getElementById('editPostModal').classList.remove('hidden');
}

  function editPost(postId, caption) {
    currentEditPostId = postId;
    document.getElementById('editCaptionInput').value = caption;
    document.getElementById('editPostForm').action = `/auth/edit-post/${postId}`;
    document.getElementById('editPostModal').classList.remove('hidden');
  }

  function closeEditModal() {
    document.getElementById('editPostModal').classList.add('hidden');
    currentEditPostId = null;
  }
</script>

</body>
</html>
